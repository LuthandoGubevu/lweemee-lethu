rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles and permissions.
    function isSignedIn() {
      return request.auth != null;
    }

    function getRole(workspaceId) {
      return get(/databases/$(database)/documents/workspaces/$(workspaceId)/members/$(request.auth.uid)).data.role;
    }

    function isWorkspaceMember(workspaceId) {
      return exists(/databases/$(database)/documents/workspaces/$(workspaceId)/members/$(request.auth.uid));
    }

    function isAdmin(workspaceId) {
      return isSignedIn() && getRole(workspaceId) == 'admin';
    }

    function isConsultant(workspaceId) {
      return isSignedIn() && getRole(workspaceId) in ['admin', 'consultant'];
    }
    
    function isClient(workspaceId) {
        return isSignedIn() && getRole(workspaceId) in ['admin', 'consultant', 'client'];
    }

    function isViewer(workspaceId) {
      return isSignedIn() && getRole(workspaceId) in ['admin', 'consultant', 'client', 'viewer'];
    }

    // Rules for the 'users' collection.
    match /users/{userId} {
      // Users can read/write their own profile and list their own workspaces.
      allow read, write: if request.auth.uid == userId;

      match /workspaces/{workspaceId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Rules for the 'workspaces' collection and its subcollections.
    match /workspaces/{workspaceId} {
      // Allow read if the user is a member of the workspace.
      allow read: if isWorkspaceMember(workspaceId);
      // Allow create by any signed-in user. The creator is typically added as the first admin member.
      allow create: if isSignedIn();
      // Allow update only by admins.
      allow update: if isAdmin(workspaceId);
      // Allow delete only by admins.
      allow delete: if isAdmin(workspaceId);
      
      // Rules for 'connections', 'posts', 'recommendations', 'reports' and 'imports' subcollections.
      match /{collection}/{docId}
      where collection in ['connections', 'posts', 'recommendations', 'reports', 'imports', 'members'] {
         // Viewers can see everything.
         allow read: if isViewer(workspaceId);
         // Consultants and Admins can create/update/delete.
         allow create, update, delete: if isConsultant(workspaceId);
      }

      // Rules for metrics and audience snapshots. These are written by a backend process, not the client.
      match /{collection}/{docId}
      where collection in ['postMetrics', 'dailyMetrics', 'monthlyMetrics', 'audienceSnapshots'] {
        allow read: if isViewer(workspaceId);
        allow write: if false; 
      }
      
      // Rules for the 'billing' singleton document.
      match /billing/config {
        // Only admins can read and write billing info.
        allow read, write: if isAdmin(workspaceId);
      }
    }
  }
}
