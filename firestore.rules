rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isFounder() {
      return request.auth.uid in ['3pW8d84ApOazG7hrw4fvNyBJTyD3', 'oq01EJM5kAdh1p5SsTMbClj7Fs03'];
    }

    // Helper functions to check user roles and permissions.
    function isSignedIn() {
      return request.auth != null;
    }

    function getRole(workspaceId) {
      return get(/databases/$(database)/documents/workspaces/$(workspaceId)/members/$(request.auth.uid)).data.role;
    }

    function isWorkspaceMember(workspaceId) {
      return isFounder() || exists(/databases/$(database)/documents/workspaces/$(workspaceId)/members/$(request.auth.uid));
    }

    function isAdmin(workspaceId) {
      return isFounder() || (isSignedIn() && getRole(workspaceId) == 'admin');
    }

    function isConsultant(workspaceId) {
      return isFounder() || (isSignedIn() && getRole(workspaceId) in ['admin', 'consultant']);
    }
    
    function isClient(workspaceId) {
        return isFounder() || (isSignedIn() && getRole(workspaceId) in ['admin', 'consultant', 'client']);
    }

    function isViewer(workspaceId) {
      return isFounder() || (isSignedIn() && getRole(workspaceId) in ['admin', 'consultant', 'client', 'viewer']);
    }

    // Rules for the 'users' collection.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      match /workspaces/{workspaceId} {
        allow list, read, write: if request.auth.uid == userId;
      }
    }

    // Rules for the 'workspaces' collection and its subcollections.
    match /workspaces/{workspaceId} {
      allow read: if isWorkspaceMember(workspaceId);
      allow create: if isSignedIn();
      allow update, delete: if isAdmin(workspaceId);
      
      match /members/{memberId} {
         allow create: if isConsultant(workspaceId) || (request.auth.uid == memberId);
         allow read: if isWorkspaceMember(workspaceId);
         allow update, delete: if isConsultant(workspaceId);
      }
      
      // Rules for data subcollections.
      // Viewers can read, Consultants can write.
      match /connections/{connectionId} {
         allow read: if isViewer(workspaceId);
         allow write: if isConsultant(workspaceId);
      }
      match /posts/{postId} {
         allow read: if isViewer(workspaceId);
         allow write: if isConsultant(workspaceId);
      }
      match /recommendations/{recommendationId} {
         allow read: if isViewer(workspaceId);
         allow write: if isConsultant(workspaceId);
      }
       match /reports/{reportId} {
         allow read: if isViewer(workspaceId);
         allow write: if isConsultant(workspaceId);
      }
       match /imports/{importId} {
         allow read: if isViewer(workspaceId);
         allow write: if isConsultant(workspaceId);
      }

      // Rules for metrics and audience snapshots, written by backend processes.
      // Allow any viewer to read these collections.
      match /postMetrics/{postId} {
        allow read: if isViewer(workspaceId);
        allow write: if false; 
      }
      match /connections/{connectionId}/dailyMetrics/{dailyMetricsId} {
        allow read: if isViewer(workspaceId);
        allow write: if false; 
      }
      match /connections/{connectionId}/monthlyMetrics/{monthlyMetricsId} {
        allow read: if isViewer(workspaceId);
        allow write: if false; 
      }
       match /connections/{connectionId}/audienceSnapshots/{snapshotId} {
        allow read: if isViewer(workspaceId);
        allow write: if false; 
      }
      
      // Rules for the 'billing' singleton document.
      match /billing/config {
        allow read, write: if isAdmin(workspaceId);
      }
    }
  }
}
